{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "lib": ["ES2021", "DOM"],
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["./src"],
    "exclude": ["node_modules", "spec", "build"]
  }
  